<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.crudQuiz.UploadQuizActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/uploadId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Id"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadPergunta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Pergunta"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadItemA"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Item A"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadItemB"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Item B"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadItemC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Item C"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadItemD"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Item D"
            android:padding="16dp" />

        <EditText
            android:id="@+id/uploadItemCorreto"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="start|center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:hint="Item Correto"
            android:padding="16dp" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="Salvar"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>